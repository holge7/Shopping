package holge.shopping.userservice.config;

import java.util.HashMap;

import org.apache.kafka.clients.admin.NewTopic;
import org.springframework.context.annotation.Bean;
import org.springframework.context.annotation.Configuration;
import org.springframework.kafka.annotation.KafkaListener;
import org.springframework.kafka.config.TopicBuilder;

import com.fasterxml.jackson.core.JsonProcessingException;
import com.fasterxml.jackson.databind.ObjectMapper;

@Configuration
public class KafkaConfig {
    @Bean
    public NewTopic topic() {
        return TopicBuilder.name("login")
                .partitions(10)
                .replicas(1)
                .build();
    }

    @KafkaListener(id = "myId", topics = "login")
    public void listen(String user) throws JsonProcessingException {
    	HashMap<String, String> itemWithOwner = new ObjectMapper().readValue(user, HashMap.class);
        System.out.println(itemWithOwner.get("email"));
    }
}
